<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context="com.adamnickle.nfcalarm.AlarmActivity">

    <include
        android:id="@+id/alarmClock"
        layout="@layout/clock" />

    <TextView
        android:id="@+id/alarmDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/accent"
        android:textSize="30sp"
        android:layout_marginTop="-12dp"
        android:layout_marginBottom="8dp"
        android:text="Monday, June 20th"/>

    <Button
        android:id="@+id/setAlarm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="150dp"
        android:text="Set Alarm"/>

    <Button
        android:id="@+id/createAlarm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="150dp"
        android:text="Create Alarm"/>

    <Button
        android:id="@+id/clearAlarm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="150dp"
        android:text="Clear Alarm"/>

</LinearLayout>
